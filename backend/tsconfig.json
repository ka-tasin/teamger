{
  "compilerOptions": {
    // Module Resolution
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    // Paths
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    // Import/Export
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // Type Checking
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Other
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}